<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FormEncrypt.com</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />

    <script type="text/javascript">

        var selected = '@ViewData["SelectedTab"]';

        jQuery(document).ready(function () {

            //add hover effect ti the menu items
            jQuery('.nav-item').hover(function () {
                jQuery(this).addClass('navHover');
            },
            function () {
                jQuery(this).removeClass('navHover');
                });

            setSelectedTab();
        });

        // remember the selected tab
        function setSelectedTab() {

            jQuery("#mainMenu > .nav-item").each(function (idx, el) {
                jQuery(el).removeClass('navDown');

                if (jQuery(el).data("tabid") == selected)
                    jQuery(el).addClass('navDown');
            });
        }

    </script>

</head>
<body>

    <!--Header container -->
    <div id="bannerContainer" class="container-xl">
        <div class="row">
            <div class="col" style="max-width:100px; padding:20px 0px 0px 20px; margin-right:50px;">
                <img alt="Logo" src="~/images/pinche-logo.png" class="d-inline-block align-top" style="width:100px;height:100px;" />
            </div>
            <div class="col" style="padding:30px 0px 0px 0px;">
                <div class="row" style="color:#21598A;font-family:'Bank Gothic Medium';font-size:160%;line-height:100%">
                    <span style="font-weight:bold">FormEncrypt.com</span>
                </div>
                <div class="row" style="font-size:90%; color:#000000; line-height:140%"></div>
            </div>
            <div class="col" style="margin:0px; padding:0px;">
                <ul class="list-group list-group-horizontal">
                    <li class="list-group-item">
                        <a href="https://www.instagram.com/" class="social-icon">
                            <img src="~/images/social-linkedin.png" width="30" height="30" />
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a href="https://www.youtube.com/" class="social-icon">
                            <img src="~/images/social-youtube.png" width="30" height="30" />
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a href="https://soundcloud.com/" class="social-icon">
                            <img src="~/images/social-insta.png" width="30" height="30" />
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!--Nav container -->
    <div id="navbarContainer" class="container-xl">
        <nav class="navbar navbar-expand-lg">
            @*<div class="collapse navbar-collapse">
                    <ul id="mainMenu" class="navbar-nav">
                        <li class="nav-item active" data-tabid="index">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item" data-tabid="mm">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="MarkerMatch">Marker Match</a>
                        </li>
                        <li class="nav-item" data-tabid="bb">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="BoardBuilder">Board Builder</a>
                        </li>
                        <li class="nav-item" data-tabid="apparel">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Apparel">Apparel</a>
                        </li>
                        <li class="nav-item" data-tabid="contact">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                    </ul>
                </div>*@
        </nav>
    </div>

    <div class="container-xl bodyContent">
        @RenderBody()
    </div>

    <div class="container-xl">
        <hr />
        <footer>
            <p>&copy;2020 FormEncrypt.com</p>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <script src="~/js/gateway.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
