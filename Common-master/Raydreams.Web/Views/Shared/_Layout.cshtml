@using Raydreams.Web.Extensions

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TAG Digital Studios</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />

    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="~/js/gateway.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/lib/raytable/raydreams.js"></script>
    <script type="text/javascript">

        var selected = '@ViewData["SelectedTab"]';

        jQuery(document).ready(function () {

            //add hover effect ti the menu items
            jQuery('.nav-item').hover(function () {
                jQuery(this).addClass('navHover');
            },
            function () {
                jQuery(this).removeClass('navHover');
                });

            setSelectedTab();
        });

        //
        function setSelectedTab() {

            jQuery("#mainMenu > .nav-item").each(function (idx, el) {
                jQuery(el).removeClass('navDown');

                if (jQuery(el).data("tabid") == selected)
                    jQuery(el).addClass('navDown');
            });
        }

    </script>
    @HTMLExtensions.GoogleAnalytics("UA-100790141-1")
    @RenderSection("Scripts", required: false)
</head>

<body>
    <!--Header container -->
    <div id="bannerContainer" class="container-xl">
        <div class="row">
            <div class="col" style="max-width:100px; padding:20px 0px 0px 20px; margin-right:50px;">
                <img alt="Brand" src="~/images/logo.png" class="d-inline-block align-top" style="width:100px;height:100px;" />
            </div>
            <div class="col" style="padding:30px 0px 0px 0px;">
                <div class="row" style="color:#21598A;font-family:'Bank Gothic Medium';font-size:160%;line-height:100%">
                    <span style="font-weight:bold">TAG</span>&nbsp;<span>digital studios</span>
                </div>
                <div class="row" style="font-size:90%; color:#000000; line-height:140%">Software NOT made in Silicon Valley</div>
            </div>
            <div class="col" style="margin:0px; padding:0px;">
                <ul class="list-group list-group-horizontal">
                    <li class="list-group-item">
                        <a href="https://www.linkedin.com/company/18724262/" class="social-icon">
                            <img src="~/images/social-linkedin.png" width="30" height="30" />
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a href="https://www.instagram.com/markermatch/" class="social-icon">
                            <img src="~/images/social-insta.png" width="30" height="30" />
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a href="https://github.com/GrumpyCockatiel" class="social-icon">
                            <img src="~/images/social-git.png" width="30" height="30" />
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a href="https://youtube.com/channel/UCbfuNppd6jrrHY4aV9D2Dkg" class="social-icon">
                            <img src="~/images/social-youtube.png" width="30" height="30" />
                        </a>
                    </li>
                    @*<li class="list-group-item">
                        <a href="https://soundcloud.com/GrumpyCockatiel" class="social-icon">
                            <img src="~/images/social-sound.png" width="30" height="30" />
                        </a>
                    </li>*@
                </ul>
            </div>
        </div>
    </div>

    <!--Nav container -->
    <div id="navbarContainer" class="container-xl">
        <nav class="navbar navbar-expand-lg">
            <div class="collapse navbar-collapse">
                <ul id="mainMenu" class="navbar-nav">
                    <li class="nav-item active" data-tabid="index">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item" data-tabid="mm">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="MarkerMatch">Marker Match</a>
                    </li>
                    <li class="nav-item" data-tabid="bb">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="BoardBuilder">Board Builder</a>
                    </li>
                    <li class="nav-item" data-tabid="color">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Color">Marker Database</a>
                    </li>
                    <li class="nav-item" data-tabid="demo">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Encrypt">Demos</a>
                    </li>
                    <li class="nav-item" data-tabid="contact">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>


    <div class="container-xl bodyContent">
        @RenderBody()
    </div>

    <div class="container-xl">
        <hr />
        <footer>
            <p>&copy; 2002-2020 TAG Digital Studios</p>
        </footer>
    </div>

</body>
</html>
